<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/device_info_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="#FFA500"
    app:cardCornerRadius="12dp"
    >

    <LinearLayout
        android:id="@+id/device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Device Name -->
        <TextView
            android:id="@+id/device_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Device Location -->
        <TextView
            android:id="@+id/device_1_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Current Device Indicator -->
        <TextView
            android:id="@+id/device_1_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This Device"
            android:textColor="#008000"
            android:textSize="15sp"
            android:visibility="gone" />

        <!-- Last Active / Active Status -->
        <TextView
            android:id="@+id/device_1_last_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Last Active: Active"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
