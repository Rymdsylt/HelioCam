<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <!-- Profile Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/orange"
            android:layout_gravity="top"
            android:padding="20dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Profile"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>


            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:text="Edit"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/roundbutton"
                android:layout_gravity="right"
                android:layout_marginTop="55dp"
                tools:ignore="RtlCompat" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/boy"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"/>

        </FrameLayout>

        <!-- Main Content Details -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Details"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Full Name:"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="119dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Username:"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/contact"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="186dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Contact #:"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="253dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Email:"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="18sp"/>

        </FrameLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/orange"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <!-- Home Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/homeButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="Home"
                    android:background="@drawable/baseline_home_24"
                    app:srcCompat="@drawable/ic_trash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Notification Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/notifButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="Notification"
                    android:background="@drawable/baseline_notifications_24"
                    app:srcCompat="@drawable/ic_trash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Notification"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- History Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/historyButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="History"
                    android:background="@drawable/baseline_history_24"
                    app:srcCompat="@drawable/ic_trash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="History"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Help Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/helpButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="Help"
                    android:background="@drawable/baseline_help_24"
                    app:srcCompat="@drawable/ic_trash"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Settings Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/settingButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="Setting"
                    android:background="@drawable/baseline_settings_24"
                    app:srcCompat="@drawable/ic_trash"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Profile Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/profileButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="Profile"
                    android:background="@drawable/baseline_person_24"
                    app:srcCompat="@drawable/ic_trash"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>