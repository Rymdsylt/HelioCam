<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF8E7">

        <!-- Left accent bar -->
        <View
            android:id="@+id/notification_accent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF7A00" />

        <!-- Notification content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_weight="1">

            <!-- Icon on the left -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Notification Icon"
                android:src="@drawable/baseline_notifications_white_24"
                app:tint="#FF7A00" />

            <!-- Notification content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Person detected by Camera 1 at nijgers"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/notification_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 2023-05-08"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/notification_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 14:39:17"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <!-- Metadata container styled to match web app -->
                    <LinearLayout
                        android:id="@+id/metadata_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:background="#F5F5F5"
                        android:padding="12dp">

                        <!-- Session name section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Session:"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                                
                            <TextView
                                android:id="@+id/metadata_session_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="nijgers"
                                android:textColor="#FF7A00"
                                android:background="#FFF0E0"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        
                        <!-- Camera info row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Camera:"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                                
                            <TextView
                                android:id="@+id/metadata_camera_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="#212121"
                                android:textSize="14sp"/>
                                
                            <TextView
                                android:id="@+id/metadata_device_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xiaomi M2003J15SC"
                                android:textColor="#757575"
                                android:background="#F0F0F0"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        
                        <!-- User email row -->
                        <LinearLayout
                            android:id="@+id/metadata_email_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="User:"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                                
                            <TextView
                                android:id="@+id/metadata_user_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="davidolimbero@gmail.com"
                                android:textColor="#212121"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        
                        <!-- Detection type row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Type:"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                                
                            <TextView
                                android:id="@+id/metadata_detection_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Person"
                                android:textColor="#FFFFFF"
                                android:background="#4CAF50"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="4dp">

            <ImageButton
                android:id="@+id/view_details_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View Details"
                android:src="@drawable/ic_visibility"
                app:tint="#757575"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete Notification"
                android:src="@drawable/ic_trash_white"
                app:tint="#757575"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>