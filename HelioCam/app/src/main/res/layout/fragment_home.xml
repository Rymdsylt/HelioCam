<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Top Bar -->
    <FrameLayout
        android:id="@+id/TopBar"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/orange"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/hamburgerButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left|center"
            android:contentDescription="Hamburger"
            android:background="@drawable/baseline_logout_24"
            app:srcCompat="@drawable/ic_trash"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_gravity="left|center"
            android:paddingLeft="60dp"
            android:text="Home"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/hamburgerButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/addSession"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center"
            android:contentDescription="Add Session"
            android:background="@drawable/ic_add_button"
            app:srcCompat="@drawable/ic_add_session" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TopBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:paddingLeft="32dp"
                android:text="All Sessions"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/notification_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>