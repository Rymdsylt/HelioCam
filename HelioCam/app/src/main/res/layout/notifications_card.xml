<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">            <!-- Icon with background -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_amber_background"
                android:layout_marginEnd="12dp">
                  <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_notifications_white_24"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Title and timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person detected by Camera 1"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Date and Time in one line -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/notification_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023-05-08"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â€¢ "
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/notification_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:39:17"
                        android:textColor="#757575"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Enhanced Metadata container with better styling -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/metadata_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="#F8FAFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Metadata Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/orange"
                        android:layout_marginEnd="8dp" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detection Details"
                        android:textColor="@color/orange"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Session info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:background="?attr/selectableItemBackground">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_home"
                        app:tint="#666666"
                        android:layout_marginEnd="12dp" />
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Session"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                            
                    <TextView
                        android:id="@+id/metadata_session_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Session"
                        android:textColor="@color/orange"
                        android:background="@drawable/rounded_badge_orange"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="6dp" />

                <!-- Camera info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:background="?attr/selectableItemBackground">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_baseline_videocam_24"
                        app:tint="#666666"
                        android:layout_marginEnd="12dp" />
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Camera"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                            
                    <TextView
                        android:id="@+id/metadata_camera_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera 1"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="6dp" />

                <!-- Device info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:background="?attr/selectableItemBackground">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_phone"
                        app:tint="#666666"
                        android:layout_marginEnd="12dp" />
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Device"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                            
                    <TextView
                        android:id="@+id/metadata_device_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Samsung Galaxy S21"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- User email -->
                <LinearLayout
                    android:id="@+id/metadata_email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp"
                    android:background="?attr/selectableItemBackground">
                    
                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="6dp" />
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_email"
                        app:tint="#666666"
                        android:layout_marginEnd="12dp" />
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="User"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                            
                    <TextView
                        android:id="@+id/metadata_user_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="user@example.com"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Detection type with enhanced styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rounded_background_light">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/sound_detection_true"
                        app:tint="#666666"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detection Type"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                            
                    <TextView
                        android:id="@+id/metadata_detection_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Person"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded_badge_green"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:elevation="2dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_details_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Details"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_visibility"
                app:iconSize="16dp"
                app:iconTint="@color/orange"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Delete"
                android:textColor="#F44336"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="#F44336"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>