<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NotificationSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NotificationSettings"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:title="Notifications"
        app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Main Notification Switch -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/main_notification_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/notification_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="All Notifications"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/notification_switch"/>

                    <TextView
                        android:id="@+id/notification_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toggle all notification settings"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="@id/notification_text"
                        app:layout_constraintTop_toBottomOf="@id/notification_text"
                        app:layout_constraintEnd_toStartOf="@id/notification_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Title -->
            <TextView
                android:id="@+id/manage_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Settings"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_notification_card" />

            <!-- Email Notifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/email_notification_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/manage_all_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="Email icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/email_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email Notifications"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/email_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/email_notification_switch"/>

                    <TextView
                        android:id="@+id/email_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Get notifications via email"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/email_icon"
                        app:layout_constraintTop_toBottomOf="@id/email_title"
                        app:layout_constraintEnd_toStartOf="@id/email_notification_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/email_notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sound Detection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sound_detection_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/email_notification_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/sound_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sound"
                        android:contentDescription="Sound icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/sound_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sound Detection"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/sound_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/sound_detection_switch"/>

                    <TextView
                        android:id="@+id/sound_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Enable sound alerts"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/sound_icon"
                        app:layout_constraintTop_toBottomOf="@id/sound_title"
                        app:layout_constraintEnd_toStartOf="@id/sound_detection_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/sound_detection_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Person Detection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/person_detection_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/sound_detection_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:contentDescription="Person detection icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/person_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Person Detection"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/person_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/person_detection_switch"/>

                    <TextView
                        android:id="@+id/person_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Get alerts when people are detected"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/person_icon"
                        app:layout_constraintTop_toBottomOf="@id/person_title"
                        app:layout_constraintEnd_toStartOf="@id/person_detection_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/person_detection_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- In-app notifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/in_app_notification_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/person_detection_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/in_app_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="In-app notification icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/in_app_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="In-app Notifications"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/in_app_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/in_app_notification_switch"/>

                    <TextView
                        android:id="@+id/in_app_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Show notifications while using the app"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/in_app_icon"
                        app:layout_constraintTop_toBottomOf="@id/in_app_title"
                        app:layout_constraintEnd_toStartOf="@id/in_app_notification_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/in_app_notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>