<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignupActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-black"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40.04sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="25.1dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Full Name:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Username:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Contact:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp"
        android:inputType="number" />

    <EditText
        android:id="@+id/email"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Email:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Password:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Confirm Password:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/settingsKey"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Settings Key:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp" />

    <EditText
        android:id="@+id/confirmSettingsKey"
        android:layout_width="261dp"
        android:layout_height="46.15dp"
        android:layout_marginTop="9.75dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="6.64dp"
        android:hint="Confirm Settings Key:"
        android:padding="10.04dp"
        android:textColorHint="@color/black"
        android:textSize="15.02sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterBtn"
        android:layout_width="165dp"
        android:layout_height="56.68dp"
        android:layout_marginHorizontal="24.9dp"
        android:layout_marginTop="25.1dp"
        android:background="@drawable/custom_edittext"
        android:text="Sign Up" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.36dp"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15.02sp" />

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.68dp"
        android:text="Login here"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15.02sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="HardcodedText" />
</LinearLayout>
